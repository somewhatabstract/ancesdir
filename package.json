    "main": "dist/index.js",
    "repository": "https://github.com/somewhatabstract/ancesdir.git",
    "bugs": {
        "url": "https://github.com/somewhatabstract/ancesdir/issues"
    },
    "author": "Jeff Yates <jeff@somewhatabstract.com>",
    "license": "MIT",
    "private": false,
    "engines": {
        "node": ">= 12"
    },
    "keywords": [
        "find",
        "ancestor",
        "utility",
        "root",
        "directory",
        "folder",
        "project",
        "repository"
